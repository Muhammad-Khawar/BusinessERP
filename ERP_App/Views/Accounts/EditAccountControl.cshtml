@model ERP_App.Models.AccountControlMV

@{
    ViewBag.Title = "Account Control";
}
<h2>Edit Account Control</h2>

@using (Html.BeginForm("EditAccountControl", "Accounts", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(u => u.BranchID)
    @Html.HiddenFor(u => u.CompanyID)
    @Html.HiddenFor(u => u.UserID)
    @Html.HiddenFor(u => u.AccountControlID)
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.AccountHeadID, "Account Head", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("AccountHeadID", null, "---Select---", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AccountHeadID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AccountControlName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AccountControlName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AccountControlName, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Back", "AllAccountControls", "Accounts", null, new { @class = "btn btn-outline-default" })
</div>


