@model IEnumerable<ERP.DatabaseLayer.tblOrder>
@{
    int number = 0;
    ViewBag.Title = "Profit & Loss Report";
}
@{ decimal? NetProfit = 0;
    var companyid = 0;
    var branchid = 0;
    int.TryParse(Convert.ToString(Session["CompanyID"]), out companyid);
    int.TryParse(Convert.ToString(Session["BranchID"]), out branchid);
}

@using (Html.BeginForm("ProfitAndLossReport", "Purchase", FormMethod.Post))
{
    <table class="table table-striped table-hover w-100">
        <tr>
            <th style="padding:3px;">Date From:</th>
            <td style="padding:5px;"><input type="datetime-local" name="DateFrom" class="form-control" value="@ViewBag.DateFrom" /></td>
            <th style="padding:3px;">Data To:</th>
            <td style="padding:5px;"><input type="datetime-local" name="DateTo" class="form-control" value="@ViewBag.DateTo" /></td>
            <td style="padding:5px;"><input id="btn1" type="submit" value="Generate Report" class="btn btn-danger btn-block" /></td>
        </tr>
        <tr>
            <th style="padding:3px;">Category:</th>
            <td style="padding:5px;"> @Html.DropDownList("Category", ViewBag.Category as SelectList, "Select Category", htmlAttributes: new { @class = "form-control", @onchange = "myFunction()" })</td>
            <th style="padding:3px;">Product:</th>
            <td style="padding:5px;"> @Html.DropDownList("Product", ViewBag.Product as SelectList, "Select Product", htmlAttributes: new { @class = "form-control" })</td>
            <td style="padding:5px;"><input id="btn2" onclick="return PrintFunction();" type="button" value="Print Report" class="btn btn-danger btn-block" /></td>
        </tr>
    </table>
}
<br />

<div class="content-heading" style="text-align:center;">Profit & Loss Report</div>
<table class="table table-striped table-hover w-100" id="datatable1">
    <thead>
        <tr>
            <th>Sr #</th>
            <th>Order Number</th>
            <th>Order Date</th>
            <th>Customer Name</th>
            <th>Order Sale Cost</th>
            <th>Order Purchase Cost</th>
            <th>Gross Profit & Loss</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            number++;
            <tr>
                <td>@number</td>
                <td>Order-@o.OrderID</td>
                <td>@DateTime.Parse(o.OrderDate.ToString()).ToLongDateString()</td>
                <td>@o.OrderName</td>
                <td>@o.tblOrderDetails.Where(x => x.CompanyFID == companyid && x.BranchFID == branchid).Sum(x => x.SalePrice * Math.Abs(Convert.ToInt32(x.Quantity)))</td>
                <td>@o.tblOrderDetails.Where(x => x.CompanyFID == companyid && x.BranchFID == branchid).Sum(x => x.PurchasePrice * Math.Abs(Convert.ToInt32(x.Quantity)))</td>
                <td>@(o.tblOrderDetails.Where(x => x.CompanyFID == companyid && x.BranchFID == branchid).Sum(x => x.SalePrice * Math.Abs(Convert.ToInt32(x.Quantity))) - o.tblOrderDetails.Where(x => x.CompanyFID == companyid && x.BranchFID == branchid).Sum(x => x.PurchasePrice * Math.Abs(Convert.ToInt32(x.Quantity))))</td>

                <td class="text-center">
                    <a href="@Url.Action("PrintSaleInvoice","Purchase", new { id = o.OrderID })" class="btn btn-sm btn-secondary" type="button">
                        <em class="fa fa-search"></em>
                    </a>
                </td>
            </tr>
            NetProfit += (o.tblOrderDetails.Where(x => x.CompanyFID == companyid && x.BranchFID == branchid).Sum(x => x.SalePrice * Math.Abs(Convert.ToInt32(x.Quantity))) - o.tblOrderDetails.Where(x => x.CompanyFID == companyid && x.BranchFID == branchid).Sum(x => x.PurchasePrice * Math.Abs(Convert.ToInt32(x.Quantity))));
        }
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>Net Profit & Loss</td>
        <td>@NetProfit</td>

    </tr>
    </tbody>
</table>
<script type="text/javascript">
    function myFunction() {
        var CategoryID = $("#Category").val();
        $.ajax({
            type: "GET",
            url: "/Purchase/GetProduct?categoryID=" + CategoryID,
            data: [],
            success: function (data) {
                var s = '<option value ="-1">---Select---</option>';
                for (var i = 0; i < data.length; i++) {
                    s += '<option value ="' + data[i].ProductID + '">' + data[i].ProductName + '</option>';
                }
                $("#Product").html(s);
            }
        });
    }
</script>