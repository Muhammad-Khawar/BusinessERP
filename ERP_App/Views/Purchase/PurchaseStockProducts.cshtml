@model ERP_App.Models.PurchaseCartMV

@{
    ViewBag.Title = "Purchase";
}
<!-- DATATABLE DEMO 2-->
<div class="card">
    <div class="card-header">
        <div class="card-title">New Purchase</div>
    </div>
    <div class="card-body">



        @using (Html.BeginForm("CreateProduct", "Stock", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(u => u.SelectPurchaseItem.CompanyID)
            @Html.HiddenFor(u => u.SelectPurchaseItem.BranchID)
            @Html.HiddenFor(u => u.SelectPurchaseItem.UserID)
        <div class="row">
            <div class="form-group col-md-5">
                @Html.LabelFor(model => model.SelectPurchaseItem.ProductName, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SelectPurchaseItem.ProductName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SelectPurchaseItem.ProductName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-5">
                @Html.LabelFor(model => model.SelectPurchaseItem.Quantity, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SelectPurchaseItem.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SelectPurchaseItem.Quantity, "", new { @class = "text-danger" })
                </div>
            </div>
       
        
            <div class="form-group col-md-5">
                @Html.LabelFor(model => model.SelectPurchaseItem.CurrentPurchaseUnitPrice, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SelectPurchaseItem.CurrentPurchaseUnitPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SelectPurchaseItem.CurrentPurchaseUnitPrice, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-5">
                @Html.LabelFor(model => model.SelectPurchaseItem.SaleUnitPrice, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SelectPurchaseItem.SaleUnitPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SelectPurchaseItem.SaleUnitPrice, "", new { @class = "text-danger" })
                </div>
            </div>
      
            <div class="form-group col-md-5">
                @Html.LabelFor(model => model.SelectPurchaseItem.Manufacture, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SelectPurchaseItem.Manufacture, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SelectPurchaseItem.Manufacture, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-5">
                @Html.LabelFor(model => model.SelectPurchaseItem.ExpiryDate, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SelectPurchaseItem.ExpiryDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SelectPurchaseItem.ExpiryDate, "", new { @class = "text-danger" })
                </div>
            </div>
   
            
            <div class="form-group col-md-5">
                @Html.LabelFor(model => model.SelectPurchaseItem.Description, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SelectPurchaseItem.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SelectPurchaseItem.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add Cart" class="btn btn-primary" />
                </div>
            </div>
        </div>
        }

        <hr />
        <h4>Purchase Cart</h4>
        <hr />

        <table class="table table-striped my-4 w-100" id="datatable2">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>

                    <th>
                        Product Quantity
                    </th>

                    <th>
                        Expiry Date
                    </th>
                    <th>
                        Manufacture Date
                    </th>
                    <th>Previous Purchase Unit Price</th>
                    <th>Current Purchase Unit Price</th>
                    <th>
                        Sale Unit Price
                    </th>

                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PurchaseItemList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExpiryDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Manufacture)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PreviousPurchaseUnitPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CurrentPurchaseUnitPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SaleUnitPrice)
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "DeletePurchaseItem", new { id = item.ProductID }, new { @class = "btn btn-warning" })

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>