@using ERP_App.Models
<!DOCTYPE html>
<html lang="zxx">
<head>
    <title>SoleBox Company</title>
    <meta charset="UTF-8">
    <meta name="description" content="SoleBox Company">
    <meta name="keywords" content="SoleBox Company, eCommerce, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Favicon -->
    <link href="~/Content/Customer/img/favicon.ico" rel="shortcut icon" />

    <!-- Google Font -->
    <link href="~/Content/Customer/https://fonts.googleapis.com/css?family=Josefin+Sans:300,300i,400,400i,700,700i" rel="stylesheet">
    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/Content/Customer/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Customer/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Content/Customer/css/flaticon.css" />
    <link rel="stylesheet" href="~/Content/Customer/css/slicknav.min.css" />
    <link rel="stylesheet" href="~/Content/Customer/css/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/Content/Customer/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/Content/Customer/css/animate.css" />
    <link rel="stylesheet" href="~/Content/Customer/css/style.css" />

    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Header section -->
    <header class="header-section">
        <div class="header-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 text-center text-lg-left">
                        <!-- logo -->
                        <a href="@Url.Action("IndexCustomer","Home")" class="site-logo">
                            <h3>SoleBox</h3>
                        </a>
                    </div>
                    <div class="col-xl-6 col-lg-5">
                        <form class="header-search-form">
                            <input type="text" placeholder="Search on SoleBox ....">
                            <button><i class="flaticon-search"></i></button>
                        </form>
                    </div>
                    <div class="col-xl-4 col-lg-5">
                        <div class="user-panel">
                            <div class="up-item">
                                <i class="flaticon-profile"></i>
                                <a href="@Url.Content("~/Home/Login")">Sign</a> In or <a href="@Url.Content("~/Home/Login")">Create Account</a>
                            </div>
                            <div class="up-item">
                                <div class="shopping-card">
                                    <i class="flaticon-bag"></i>
                                    @if (Session["myCart"] != null)
                                    {
                                        List<StockMV> list = (List<StockMV>)Session["myCart"];
                                        <span>@list.Count()</span>
                                    }

                                </div>
                                <a href="@Url.Content("~/Home/Cart")">Shopping Cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <nav class="main-navbar">
            <div class="container">
                <!-- menu -->
                <ul class="main-menu">
                    <li><a href="@Url.Action("IndexCustomer","Home")">Home</a></li>
                    <li><a href="@Url.Action("About","Home")">About Us</a></li>
                    <li><a href="@Url.Action("Shop","Home")">Shop</a></li>
                    <li><a href="@Url.Action("ContactUs","Home")">Contact</a></li>
                    <li><a href="@Url.Action("FeedBack","Home")">FeedBack</a></li>
                    <li>
                        <a href="#">Customer</a>
                        <ul class="sub-menu">
                            @if (Session["Customer"] != null)
                            {
                                <li><a href="@Url.Action("Index","Customers")">Manage Account</a></li>
                                <li><a href="@Url.Action("CustomerHistory","Customers")">Order History</a></li>
                                <li><a href="@Url.Action("CancelledOrder","Customers")">Cancelled Order</a></li>
                                <li><a href="@Url.Action("Logout","Customers")">Customer Logout</a></li>

                            }
                            else
                            {
                                <li><a href="@Url.Action("Create","Customers")">Create Account</a></li>
                                <li><a href="@Url.Action("Login","Customers")">Customer Login</a></li>
                            }


                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <!-- Header section end -->

    @RenderBody()



    <!-- Footer section -->
    <section class="footer-section">
        <div class="container">
            <div class="footer-logo text-center">
                <h3 style="color:white;">The SoleBox Shop</h3>
            </div>
            <div class="row">
                <div class="col-lg-3 col-sm-6">
                    <div class="footer-widget about-widget">
                        <h2>About</h2>
                        <p>Here at ‘SoleBox’.com, we realize that style and prosperity begin with the correct shoes. We likewise understand that effectively finding the size and style to meet your requirements is vital to your web-based shopping knowledge. Since beginning our web-based business website in 2022, we’ve been endeavoring to present to you that perfect shopping experience.</p>
                        <img src="~/Content/Customer/img/cards.png" alt="">
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="footer-widget about-widget">
                        <h2>Questions</h2>
                        <ul>
                            <li><a href="@Url.Action("IndexCustomer","Home")">Home</a></li>
                            <li><a href="@Url.Action("About","Home")">About Us</a></li>
                            <li><a href="@Url.Action("Shop","Home")">Shop</a></li>
                            <li><a href="@Url.Action("ContactUs","Home")">Contact</a></li>
                            <li><a href="@Url.Action("FeedBack","Home")">FeedBack</a></li>
                            
                        </ul>
                        <ul>
                            <li><a href="~/Content/Customer/">Partners</a></li>
                            <li><a href="~/Content/Customer/">Bloggers</a></li>
                            <li><a href="~/Content/Customer/">Support</a></li>
                            <li><a href="~/Content/Customer/">Terms of Use</a></li>
                            <li><a href="~/Content/Customer/">Press</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="footer-widget about-widget">
                        <h2>Questions</h2>
                        <div class="fw-latest-post-widget">
                            <div class="lp-item">
                                <div class="lp-thumb set-bg" data-setbg="img/blog-thumbs/1.jpg"></div>
                                <div class="lp-content">
                                    <h6>what shoes to wear</h6>
                                    <span>Jan 01, 2022</span>
                                    <a href="~/Content/Customer/#" class="readmore">Read More</a>
                                </div>
                            </div>
                            <div class="lp-item">
                                <div class="lp-thumb set-bg" data-setbg="img/blog-thumbs/2.jpg"></div>
                                <div class="lp-content">
                                    <h6>trends this year</h6>
                                    <span>Mar 21, 2022</span>
                                    <a href="~/Content/Customer/#" class="readmore">Read More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="footer-widget contact-widget">
                        <h2>Questions</h2>
                        <div class="con-info">
                            <span>C.</span>
                            <p>Your Company Ltd </p>
                        </div>
                        <div class="con-info">
                            <span>B.</span>
                            <p>1481 Creekside Lane  Avila Beach, CA 93424, P.O. BOX 68 </p>
                        </div>
                        <div class="con-info">
                            <span>T.</span>
                            <p>+53 345 7953 32453</p>
                        </div>
                        <div class="con-info">
                            <span>E.</span>
                            <p>office@youremail.com</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="social-links-warp">
            <div class="container">
                <div class="social-links">
                    <a href="~/Content/Customer/" class="instagram"><i class="fa fa-instagram"></i><span>instagram</span></a>
                    <a href="~/Content/Customer/" class="google-plus"><i class="fa fa-google-plus"></i><span>g+plus</span></a>
                    <a href="~/Content/Customer/" class="pinterest"><i class="fa fa-pinterest"></i><span>pinterest</span></a>
                    <a href="~/Content/Customer/" class="facebook"><i class="fa fa-facebook"></i><span>facebook</span></a>
                    <a href="~/Content/Customer/" class="twitter"><i class="fa fa-twitter"></i><span>twitter</span></a>
                    <a href="~/Content/Customer/" class="youtube"><i class="fa fa-youtube"></i><span>youtube</span></a>
                    <a href="~/Content/Customer/" class="tumblr"><i class="fa fa-tumblr-square"></i><span>tumblr</span></a>
                </div>

                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                <p class="text-white text-center mt-5">
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script> All rights reserved | This SoleBox Website is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="~/Content/Customer/https://colorlib.com" target="_blank">Mr.Khawar</a>
                </p>
                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->

            </div>
        </div>
    </section>
    <!-- Footer section end -->
    <!--====== Javascripts & Jquery ======-->
    <script src="~/Content/Customer/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/Customer/js/bootstrap.min.js"></script>
    <script src="~/Content/Customer/js/jquery.slicknav.min.js"></script>
    <script src="~/Content/Customer/js/owl.carousel.min.js"></script>
    <script src="~/Content/Customer/js/jquery.nicescroll.min.js"></script>
    <script src="~/Content/Customer/js/jquery.zoom.min.js"></script>
    <script src="~/Content/Customer/js/jquery-ui.min.js"></script>
    <script src="~/Content/Customer/js/main.js"></script>

</body>
</html>
