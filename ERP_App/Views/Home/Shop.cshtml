        $.ajax({
            type: "GET",
            url: '@Url.Action("FilterProducts", "Home")',
            data: {
                minimumPrice: rangeSlider.slider("values", 0),
                maximunPrice: rangeSlider.slider("values", 1)
            },
            success: function (data) {
               // alert(data);
                $("#filterPiriceProducts").html(data);
            }
            
        });
