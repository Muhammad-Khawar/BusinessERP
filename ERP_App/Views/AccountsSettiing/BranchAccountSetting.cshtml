@model IEnumerable<ERP_App.Models.AccountSettingMV>

@{
    ViewBag.Title = "BranchAccountSetting";
}

<!-- DATATABLE DEMO 2-->
<div class="card">
    <div class="card-header">
        <div class="card-title">Branch Account Setting</div>
    </div>
    <div class="card-body">
        <div>@Html.ActionLink("Create Setting", "CreateBranchAccountSetting", null, new { @class = "btn btn-primary" })</div>
        <hr />
        <table class="table table-striped my-4 w-100" id="datatable2">
            <thead>
                <tr>
                    <th>
                        Account Head
                    </th>
                    <th>
                        Account Control
                    </th>
                    <th>
                        Account Sub Control
                    </th>
                    <th>
                        AccountActivity
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountHead)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountSubControl)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountSubControl)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountActivity)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditBranchAccountSetting", new { accountSettingID = item.AccountSettingID }, new { @class = "btn btn-warning" })

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>